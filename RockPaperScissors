<!DOCTYPE html>
<html>
    <head>
        <meta charset = "utf-8" />
        <title>My First Game</title>
        <script>
            //  1 is rock, 2 is paper and 3 is scissors
            function random(min, max){
                return Math.floor( Math.random() * (max - min + 1) + min)
            }
            function choice(play){
                let result = ""
                if(play == 1){
                    result = "Rock"
                } else if (play == 2) {
                    result = "Play"
                } else if (player == 3){
                    result = "Scissors"
                } else {
                    result = "NULL"
                }
            }
            let player = 0
            let min = 1
            let max = 3   
            let pc = random (1, 3) 
            player = prompt("Choose: 1 for rock, 2 for paper y 3 for scissors")
            // alert("You choose " + player)

            alert ("PC Choose " + choice(pc))
            alert ("You Choose " + choice (player))

            // COMBATE
            if (pc == player){
                alert("TIE")
            } else if (player - pc == 1){
                alert("YOU WIN")
            } else if (player - pc == -2){
                alert("YOU WIN")
            } else {
                alert("YOU LOSE")
            }
        </script>
    </head>
    <body>
        <h1><B>ROCK, PAPER, SCISSORS</B></h1>

    </body>
</html>
